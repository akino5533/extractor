# ---------------------------------------------------
# tapl.syntax
# ---------------------------------------------------

caseinsensitive

context default

# structure
    keyword whole entry white
    keyword whole scope white
    keyword whole end white
    keyword whole group brightgreen

# keywords
    keyword whole space green
    keyword whole subspace green
    keyword whole index green
    keyword whole load green
    keyword whole save green
    keyword whole destroy green
    keyword whole export green
    keyword whole import green
    keyword whole invoke brightred
    keyword whole external red
    keyword whole data red

# modifiers
    keyword whole real blue
    keyword whole complex blue
    keyword whole tag brightblue
    keyword whole sparse brightblue
    keyword whole to brightblue
    keyword whole method magenta

# operators and syntax elements
    keyword ( brightcyan
    keyword ) brightcyan
    keyword : brightcyan
    keyword , brightcyan
    keyword \+ yellow
    keyword \- yellow
    keyword \* yellow
    keyword \/ yellow
    keyword = yellow
    keyword < yellow
    keyword > yellow
    keyword [ brightmagenta
    keyword ] brightmagenta

context # \n brown

   spellcheck
